                              <Label fx:id="lblGravityStatus" text="DISCONNECTED" />
                           </children>
                        </HBox>
                        <Label text="Serial Port" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
                           <padding>
                              <Insets right="5.0" />
                           </padding>
                        </Label>
                        <Label text="Baud Rate" GridPane.halignment="RIGHT" GridPane.rowIndex="3">
                           <padding>
                              <Insets right="5.0" />
                           </padding>
                        </Label>
                        <ChoiceBox fx:id="selectBaudGravity" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                              <ChoiceBox fx:id="selectPortGravity" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
