                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label styleClass="lg" text="GPS Data Connection" GridPane.columnSpan="2" GridPane.halignment="CENTER" />
