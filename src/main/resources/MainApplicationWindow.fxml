                           <styleClass>
                              <String fx:value="md" />
                              <String fx:value="wide" />
                           </styleClass>
                        </ToggleButton>
                        <ChoiceBox fx:id="selectBaudGPS" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="Status" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
                           <GridPane.margin>
                              <Insets right="5.0" />
                           </GridPane.margin>
                        </Label>
                        <Label fx:id="lblGpsStatus" text="DISCONNECTED" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </GridPane>
               </children>
               <HBox.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </HBox.margin>
            </Pane>
            <Separator disable="true" opacity="0.0" prefWidth="200.0" />
            </children>
         <BorderPane.margin>
            <Insets top="2.0" />
